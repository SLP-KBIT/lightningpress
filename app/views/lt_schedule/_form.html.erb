<%= form_for lt, url: { action: :create } do |form| %>

  <% modal_body = capture do %>
    <div class="modal-body">
      <div class="form-group">
        <%= form.label :name, 'タイトル' %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :performance_date, '発表日時' %>
        <%= form.datetime_field :performance_date, class: "form-control", placeholder: DateTime.now.to_s(:date) %>
      </div>
      <div class="form-group">
        <%= form.label :summary, '概要'%>
        <%= form.text_area :summary, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :file, '発表資料'%>
        <%= form.file_field :file, class: "btn brn-primary" %>
      </div>
    </div>
  <% end %>

  <% modal_dialog id: "myModal",
       header: { show_close: true, dismiss: :modal, title: "LT新規作成" },
       body: modal_body,
       footer: form.submit("登録", class: "btn btn-primary") + content_tag(:button, "閉じる", class: "btn btn-default", 'data-dismiss' => "modal")
  %>
<% end %>
